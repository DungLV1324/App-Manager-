<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FileManager" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#00000000</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>     <!-- Customize your theme here. -->
    </style>

    <declare-styleable name="HorizontalBarChartView">
        <attr name="hbcv_color" format="color" />
        <attr name="hbcv_cornerRadius" format="float" />
    </declare-styleable>

    <declare-styleable name="ChartIndicator">
        <attr name="indicatorColor" format="color" />
        <attr name="cornerRadiusChart" format="dimension" />
    </declare-styleable>


    <declare-styleable name="ShadowView">
        <attr name="android:foreground"/>
        <attr name="shadowMargin" format="dimension"/>
        <attr name="shadowMarginTop" format="dimension"/>
        <attr name="shadowMarginLeft" format="dimension"/>
        <attr name="shadowMarginRight" format="dimension"/>
        <attr name="shadowMarginBottom" format="dimension"/>
        <attr name="cornerRadius" format="dimension"/>
        <attr name="cornerRadiusTL" format="dimension"/>
        <attr name="cornerRadiusTR" format="dimension"/>
        <attr name="cornerRadiusBL" format="dimension"/>
        <attr name="cornerRadiusBR" format="dimension"/>
        <attr name="foregroundColor" format="color"/>
        <attr name="shadowColor" format="color"/>
        <attr name="shadowDx" format="float"/>
        <attr name="shadowDy" format="float"/>
        <attr name="shadowRadius" format="dimension"/>
        <attr name="backgroundColor" format="color"/>
    </declare-styleable>
    <declare-styleable name="ShadowView_Layout">
        <attr name="layout_gravity">
            <flag name="top"
                value="0x30"/>
            <flag name="bottom"
                value="0x50"/>
            <flag name="left"
                value="0x03"/>
            <flag name="right"
                value="0x05"/>
            <flag name="center_vertical"
                value="0x10"/>
            <flag name="fill_vertical"
                value="0x70"/>
            <flag name="center_horizontal"
                value="0x01"/>
            <flag name="fill_horizontal"
                value="0x07"/>
            <flag name="center"
                value="0x11"/>
            <flag name="fill"
                value="0x77"/>
            <flag name="clip_vertical"
                value="0x80"/>
            <flag name="clip_horizontal"
                value="0x08"/>
            <flag name="start"
                value="0x00800003"/>
            <flag name="end"
                value="0x00800005"/>
        </attr>
    </declare-styleable>
</resources>