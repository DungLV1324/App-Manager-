<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_ripple_setting"
        android:clickable="true"
        android:focusable="true"
        android:padding="10dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/im_preview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:cardCornerRadius="30dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_name_video"
            app:layout_constraintDimensionRatio="152:90"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="#D5D5D5"
            app:strokeWidth="2dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/background_image" />
        </com.google.android.material.card.MaterialCardView>


        <ImageView
            android:id="@+id/im_three_dots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_ripple_dot"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintBottom_toBottomOf="@id/tv_name_video"
            app:layout_constraintLeft_toRightOf="@id/tv_name_video"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_name_video"
            tools:ignore="UnknownIdInLayout" />

        <TextView
            android:id="@+id/tv_name_video"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="23dp"
            android:layout_marginBottom="6dp"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/backgroundcolorfuldobeautiful_png"
            android:textColor="#1B252D"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/im_three_dots"
            app:layout_constraintTop_toBottomOf="@+id/im_preview" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>