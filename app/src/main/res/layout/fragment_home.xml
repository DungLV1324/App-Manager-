<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/view_bg_search"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:background="@drawable/custom_bg_search"
            app:layout_constraintDimensionRatio="3:0.3"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/im_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_search"
            app:layout_constraintBottom_toBottomOf="@+id/view_bg_search"
            app:layout_constraintLeft_toLeftOf="@+id/view_bg_search"
            app:layout_constraintTop_toTopOf="@id/view_bg_search" />

        <EditText
            android:id="@+id/tv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/roboto_regular"
            android:background="@null"

            android:hint="@string/search"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="#6C757D"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/im_search"
            app:layout_constraintLeft_toRightOf="@id/im_search"
            app:layout_constraintTop_toTopOf="@+id/im_search" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scrollbars="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_bg_search"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_editor_absoluteX="0dp">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/im_images"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:src="@drawable/picture"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/im_videos"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_images"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/images"

                    android:textColor="#000000"

                    android:textSize="11sp"
                    app:layout_constraintLeft_toLeftOf="@+id/im_images"
                    app:layout_constraintRight_toRightOf="@+id/im_images"
                    app:layout_constraintTop_toBottomOf="@+id/im_images" />

                <ImageView
                    android:id="@+id/im_videos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bg_ic_video"
                    app:layout_constraintLeft_toRightOf="@id/im_images"
                    app:layout_constraintRight_toLeftOf="@id/im_document"
                    app:layout_constraintTop_toTopOf="@id/im_images" />

                <TextView
                    android:id="@+id/tv_videos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/videos"
                    android:textColor="#000000"
                    android:textSize="11sp"

                    app:layout_constraintLeft_toLeftOf="@+id/im_videos"
                    app:layout_constraintRight_toRightOf="@+id/im_videos"
                    app:layout_constraintTop_toBottomOf="@+id/im_videos" />

                <ImageView
                    android:id="@+id/im_document"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bg_ic_document"
                    app:layout_constraintLeft_toRightOf="@id/im_videos"
                    app:layout_constraintRight_toLeftOf="@id/im_music"
                    app:layout_constraintTop_toTopOf="@id/im_images" />

                <TextView
                    android:id="@+id/tv_document"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/document"
                    android:textColor="#000000"

                    android:textSize="11sp"
                    app:layout_constraintLeft_toLeftOf="@+id/im_document"
                    app:layout_constraintRight_toRightOf="@+id/im_document"
                    app:layout_constraintTop_toBottomOf="@+id/im_document" />

                <ImageView
                    android:id="@+id/im_music"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bg_ic_music"
                    app:layout_constraintLeft_toRightOf="@id/im_document"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/im_images" />

                <TextView
                    android:id="@+id/tv_music"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/music"
                    android:textColor="#000000"

                    android:textSize="11sp"
                    app:layout_constraintLeft_toLeftOf="@+id/im_music"
                    app:layout_constraintRight_toRightOf="@+id/im_music"
                    app:layout_constraintTop_toBottomOf="@+id/im_music" />

                <ImageView
                    android:id="@+id/im_android_apk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/bg_ic_android"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/im_videos"
                    app:layout_constraintTop_toBottomOf="@id/tv_images" />

                <TextView
                    android:id="@+id/tv_apk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/tv_apk"
                    android:textColor="#000000"

                    android:textSize="11sp"
                    app:layout_constraintLeft_toLeftOf="@+id/im_android_apk"
                    app:layout_constraintRight_toRightOf="@+id/im_android_apk"
                    app:layout_constraintTop_toBottomOf="@+id/im_android_apk" />

                <ImageView
                    android:id="@+id/im_dowload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bg_ic_download"
                    app:layout_constraintLeft_toRightOf="@id/im_images"
                    app:layout_constraintRight_toLeftOf="@id/im_document"
                    app:layout_constraintTop_toTopOf="@id/im_android_apk" />

                <TextView
                    android:id="@+id/tv_dowload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/dowload"
                    android:textColor="#000000"

                    android:textSize="11sp"
                    app:layout_constraintLeft_toLeftOf="@+id/im_dowload"
                    app:layout_constraintRight_toRightOf="@+id/im_dowload"
                    app:layout_constraintTop_toBottomOf="@+id/im_dowload" />

                <ImageView
                    android:id="@+id/im_zip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bg_ic_zip"
                    app:layout_constraintLeft_toRightOf="@id/im_videos"
                    app:layout_constraintRight_toLeftOf="@id/im_music"
                    app:layout_constraintTop_toTopOf="@id/im_android_apk" />

                <TextView
                    android:id="@+id/tv_zip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/zip"
                    android:textColor="#000000"

                    android:textSize="11sp"
                    app:layout_constraintLeft_toLeftOf="@+id/im_zip"
                    app:layout_constraintRight_toRightOf="@+id/im_zip"
                    app:layout_constraintTop_toBottomOf="@+id/im_zip" />

                <ImageView
                    android:id="@+id/im_trash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bg_ic_delete"
                    app:layout_constraintLeft_toRightOf="@id/im_document"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@id/im_android_apk" />

                <TextView
                    android:id="@+id/tv_trash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/trash"
                    android:textColor="#000000"

                    android:textSize="11sp"
                    app:layout_constraintLeft_toLeftOf="@+id/im_trash"
                    app:layout_constraintRight_toRightOf="@+id/im_trash"
                    app:layout_constraintTop_toBottomOf="@+id/im_trash" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

