<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <ImageView
            android:id="@+id/im_Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngôn ngữ"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#1B252D"
            app:layout_constraintTop_toTopOf="@+id/im_Back"
            app:layout_constraintLeft_toRightOf="@+id/im_Back"
            android:layout_marginLeft="10dp"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_language"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/im_Back"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:spanCount="1"
            android:layout_marginTop="25dp"
            />


        <TextView
            android:id="@+id/tv_Home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textColor="#6552FE"
            android:fontFamily="@font/roboto_medium"
            android:textSize="11sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv_Folder"
            />

        <TextView
            android:id="@+id/tv_Folder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Folder"
            android:textColor="#1B252D"
            android:fontFamily="@font/roboto_medium"
            android:textSize="11sp"
            app:layout_constraintLeft_toRightOf="@+id/tv_Home"
            app:layout_constraintTop_toTopOf="@+id/tv_Home"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv_History"
            />

        <TextView
            android:id="@+id/tv_History"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="History"
            android:textColor="#1B252D"
            android:fontFamily="@font/roboto_medium"
            android:textSize="11sp"
            app:layout_constraintLeft_toRightOf="@+id/tv_Folder"
            app:layout_constraintTop_toTopOf="@+id/tv_Folder"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tv_Setting"

            />

        <TextView
            android:id="@+id/tv_Setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Setting"
            android:textColor="#1B252D"
            android:fontFamily="@font/roboto_medium"
            android:textSize="11sp"
            app:layout_constraintLeft_toRightOf="@+id/tv_History"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_History"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <ImageView
            android:id="@+id/im_Home"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/home"
            app:layout_constraintLeft_toLeftOf="@+id/tv_Home"
            app:layout_constraintRight_toRightOf="@+id/tv_Home"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_Home"
            />

        <ImageView
            android:id="@+id/im_Folder"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_folder"
            app:layout_constraintLeft_toLeftOf="@+id/tv_Folder"
            app:layout_constraintRight_toRightOf="@+id/tv_Folder"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_Folder"
            />

        <ImageView
            android:id="@+id/im_History"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_history"
            app:layout_constraintLeft_toLeftOf="@+id/tv_History"
            app:layout_constraintRight_toRightOf="@+id/tv_History"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_History"
            />

        <ImageView
            android:id="@+id/im_Setting"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_setting"
            app:layout_constraintLeft_toLeftOf="@+id/tv_Setting"
            app:layout_constraintRight_toRightOf="@+id/tv_Setting"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_Setting"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>